<?xml version="1.0" encoding="UTF-8"?>
<ContentPage BackgroundImage="background.png" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="DeepSeaWorldApp.Views.HomePage" xmlns:vm="clr-namespace:DeepSeaWorldApp.ViewModels" Title="{Binding Title}">
    <ContentPage.BindingContext>
        <vm:HomeViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Resources>
        <ResourceDictionary>
            <!--Page Level Resources: Compatibile with Xamarin Live Player -->
            <Color x:Key="Primary">#2196F3</Color>
            <Color x:Key="Accent">#96d1ff</Color>
            <Color x:Key="LightTextColor">#999999</Color>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="120" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Image Source="deep_sea.png" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Aspect="Fill" />
            <Image Source="deep_sea.png" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" BackgroundColor="Navy" />
            <BoxView Grid.Row="2" Grid.Column="0" BackgroundColor="Blue" />
            <BoxView Grid.Row="2" Grid.Column="1" BackgroundColor="Fuchsia" />
            <BoxView Grid.Row="3" Grid.Column="0" BackgroundColor="Gray" />
            <BoxView Grid.Row="3" Grid.Column="1" BackgroundColor="Green" />
            <BoxView Grid.Row="4" Grid.Column="0" BackgroundColor="Lime" />
            <BoxView Grid.Row="4" Grid.Column="1" BackgroundColor="Maroon" />
        </Grid>
    </ContentPage.Content>
</ContentPage>