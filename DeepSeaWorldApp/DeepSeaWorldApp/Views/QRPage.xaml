<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
                        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                        x:Class="DeepSeaWorldApp.Views.QRPage"
                        xmlns:zxing="clr-namespace:ZXing.Net.Mobile.Forms;assembly=ZXing.Net.Mobile.Forms"
                        Title="Partial screen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <BoxView Grid.Row="0" BackgroundColor="Chocolate"/>
        <zxing:ZXingScannerView Grid.Row="1" x:Name="_scanView" 
                                OnScanResult="Handle_OnScanResult" 
                                IsScanning="true"
                                WidthRequest="100" HeightRequest="400" />
        <BoxView Grid.Row="2" BackgroundColor="Blue" />
    </Grid>
</ContentPage>  